          <br /><br />

          <div class="row">
            <% if(products){ %>
              <% products.forEach(function(product){ %>
            <div class="col-lg-9 col-md-6 mb-4">
              <div class="card h-100">
                <div class="card-body">
                  <h4 class="card-title">
                    <a href="#"><%= product.brand %></a>
                  </h4>
                  <h5><%= product.model %></h5>
                  <h5>Size: <%= product.size %></h5>
                  <h5>Price: <%= product.price %></h5>
                  <% if(product.idealFor){ %>
                    <h5>Ideal For: <%= product.idealFor %></h5>
                  <% } %>
                  <h5>Color: <%= product.color %></h5>
                  <% if(product.ram){ %>
                    <h5>Ram: <%= product.ram %></h5>
                  <% } %>
                  <% if(product.storage){ %>
                    <h5>Storage: <%= product.storage %></h5>
                  <% } %>
                  <% if(product.camera){ %>
                    <h5>Camera: <%= product.camera %></h5>
                  <% } %>
                  <% if(product.cpu){ %>
                    <h5>CPU: <%= product.cpu %></h5>
                  <% } %>
                  <h5>Warranty: <%= product.warranty %></h5>
                  <h5>Description: <%= product.description %></h5>

                </div>
                <form action="http://localhost:8000/users/product/add-to-cart/<%= product.id %>/<%= product.brand %>/<%= product.model %>/<%= product.price%>" method="GET">
                Quantity : <input type="number" name="quantity" min="1" max="3" placeholder="1-3" required/>
                <button type="submit" class="btn btn-primary">Add to Cart</button>
                </form>
              </div>
            </div>
            <% }) %>
            <% } %>

        </div>
          <!-- /.row -->

        </div>
